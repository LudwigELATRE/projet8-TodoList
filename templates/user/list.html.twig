{% extends 'base.html.twig' %}

{% block header_img %}{% endblock %}

{% block header_title %}
    <h1>Liste des utilisateurs</h1>
{% endblock %}

{% block body %}
    {% set other_users = users|filter(user => user != app.user) %}

    {% if other_users|length == 0 %}
        <div class="alert alert-warning" role="alert">
            Il n'y a pas d'autres utilisateurs enregistrés.
            <a href="{{ path('user_create') }}" class="btn btn-warning pull-right">Créer un utilisateur</a>
        </div>
    {% else %}
        <div class="row">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Nom d'utilisateur</th>
                    <th>Adresse e-mail</th>
                    <th>Actions</th>
                    <th>Roles</th>
                </tr>
                </thead>
                <tbody>
                {% for user in other_users %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles[0] }}</td>
                        <td class="d-flex">
                            {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
                                <form method="post" action="{{ path('user_delete', { id: user.id }) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_user_' ~ user.id) }}">
                                    <button class="btn btn-danger btn-sm m-1">Supprimer</button>
                                </form>
                            {% endif %}
                            <a href="{{ path('user_update_role', { id: user.id }) }}" class="btn btn-warning btn-sm m-1">Modifier rôle</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
