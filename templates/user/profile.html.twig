{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <h1>Profil de {{ user.username }}</h1>

    <ul>
        <li><strong>Email :</strong> {{ user.email }}</li>
        <li><strong>Rôles :</strong> {{ user.roles|join(', ') }}</li>
    </ul>

    <h3 class="mt-4">Statistiques des tâches</h3>
    <ul class="list-group mb-3">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Tâches terminées
            <span class="badge bg-success rounded-pill">{{ taskStats.doneCount }}</span>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Tâches non terminées
            <span class="badge bg-warning text-dark rounded-pill">{{ taskStats.notDoneCount }}</span>
        </li>
    </ul>

    <a href="{{ path('user_edit', {'id' : user.id}) }}" class="btn btn-success btn-sm">Modifier mon profil</a>
{% endblock %}