{% extends 'base.html.twig' %}

{% block header_img %}
    <img class="img-fluid d-block mx-auto my-3" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">
{% endblock %}

{% block body %}
    <div class="text-end mb-3">
        <a href="{{ path('default') }}" class="btn btn-danger">Retour</a>
    </div>

    <div class="row" id="card">
        {% set hasTodo = false %} {# ‚Üê Initialisation de la variable de contr√¥le #}

        {% for task in tasks %}
            {% if not task.isDone %}
                {% set hasTodo = true %}
                <div class="col-sm-6 col-md-4 mb-4">
                    <div class="card card-square shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="card-title mb-0">
                                    <a href="" class="text-decoration-none text-dark">
                                        {{ task.title }}
                                    </a>
                                </h5>
                                <span class="badge bg-secondary">‚úò</span>
                            </div>

                            <p class="card-text">
                                {{ task.content|slice(0, 120) }}{% if task.content|length > 120 %}‚Ä¶{% endif %}
                            </p>

                            <div class="mt-auto">
                                <form action="{{ path('task_toggle', {'id': task.id}) }}" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-success btn-sm">
                                        Marquer comme faite
                                    </button>
                                </form>

                                <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-outline-warning btn-sm">
                                    Modifier
                                </a>

                                <form action="{{ path('task_delete', {'id': task.id}) }}" method="post" class="d-inline ms-2">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Supprimer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}

        {% if not hasTodo %}
            <div class="alert alert-success" role="alert">
                üéâ Toutes les t√¢ches ont √©t√© termin√©es !
                <a href="{{ path('task_create') }}" class="btn btn-success float-end">Cr√©er une nouvelle t√¢che</a>
            </div>
        {% endif %}
    </div>
{% endblock %}
